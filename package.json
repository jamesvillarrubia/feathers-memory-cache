{
  "name": "feathers-memory-cache",
  "version": "0.0.2",
  "description": "Hooks for adding an in-memory, scopable LRU-cache in FeathersJS services",
  "main": "lib/",
  "types": "lib/",
  "scripts": {
    "prepublish": "npm run compile",
    "compile": "shx rm -rf lib/ && tsc -b --showConfig",
    "compile:dev": "shx rm -rf lib/ && tsc -b --watch --showConfig",
    "compile:test": "npm run compile && mocha --config .mocharc.json --recursive test/**/*.test.ts",

    "test:watch": "mocha --require ts-node/register --watch --recursive --config .mocharc.json --watch-files src/**/*.ts,test/**/*.ts test/**/*.test.ts",
    "mocha": "",  
    "test": "mocha --require ts-node/register test/**/*.ts"
  },
  "author": {
    "name": "James Villarrubia",
    "email": "james.villarrubia@gmail.com"
  },
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesvillarrubia/feathers-memory-cache.git"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "src/**",
    "lib/**",
    "*.d.ts",
    "*.js"
  ],
  "keywords": [
    "feathers",
    "feathersjs",
    "hook",
    "hooks",
    "service",
    "cache",
    "lru"
  ],
  "bugs": {
    "url": "https://github.com/jamesvillarrubia/feathers-memory-cache/issues"
  },
  "homepage": "https://github.com/jamesvillarrubia/feathers-memory-cache#readme",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.2",
    "lru-cache": "^6.0.0",
    "qs": "^6.10.1",
    "ts-node-dev": "^1.1.8"
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "devDependencies": {
    "@feathersjs/errors": "^5.0.0-pre.14",
    "@feathersjs/express": "^5.0.0-pre.14",
    "@feathersjs/feathers": "^5.0.0-pre.14",
    "@feathersjs/memory": "^5.0.0-pre.14",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/lru-cache": "^5.1.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@types/qs": "^6.9.7",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.1.3",
    "shx": "^0.3.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">= 12"
  },
  "directories": {
    "lib": "lib"
  },
  "release": {
    "branches": [
      "release"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
